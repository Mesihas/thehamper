@model HamperCreateViewModel

<h4>Create New Hamper </h4>
<div class="col-6">
<form asp-controller="Hamper" asp-action="Create" method="post" enctype="multipart/form-data">

    <div>
        <label asp-for="HamperName"></label>
        <input asp-for="HamperName" class="form-control form-control-sm"/>
    </div>

    <div>
        <label asp-for="HamperPrice"></label>
        <input asp-for="HamperPrice" class="form-control form-control-sm"/>
    </div>
    
    <div>
        <label asp-for="Description"></label>
        <textarea asp-for="Description" rows="8" cols="40" class="form-control form-control-sm" ></textarea>
    </div>

    <div class="form-group">
        <label>Select Category</label>
        <select class="form-control col-md-3 form-control form-control-sm" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories ,"CategoryId","Name"))"></select>
    </div>
    <div>
        <label asp-for="ImageUrl"></label>
        <input type="file" name="ImageUrl" class="form-control form-control-sm">
    </div>

    @*<div>
        <input type="hidden" asp-for="CategoryId" />
    </div>*@

    <div>
        <input type="submit" value="Save" />
    </div>
</form>
</div>