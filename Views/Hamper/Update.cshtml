@model HamperUpdateViewModel

<p>Create New Hamper </p>
<div class="col-6">
    <form asp-controller="Hamper" asp-action="Update" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="HamperName"></label>
            <input asp-for="HamperName" />
        </div>

        <div>
            <label asp-for="HamperPrice"></label>
            <input asp-for="HamperPrice" />
        </div>

        <div>
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="8" cols="20" class="form-control form-control-sm"></textarea>
        </div>

        <div class="form-group">
            <label>Select Category</label>
            <select class="form-control col-md-4" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories ,"CategoryId","Name"))"></select>
        </div>
        <div>
            <label asp-for="ImageUrl"></label>
            <input type="file" name="ImageUrl" class="form-control form-control-sm">
        </div>
        <div>
            <label asp-for="Discontinued"></label>
            <input asp-for="Discontinued" type="checkbox" />
        </div>

        <div>
            <input type="hidden" asp-for="HamperId" />
        </div>

        <div>
            <input type="submit" value="Save" />
        </div>
    </form>
</div>